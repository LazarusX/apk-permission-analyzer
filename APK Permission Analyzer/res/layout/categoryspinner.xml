<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">


	<TextView android:id="@+id/tv" android:layout_width="fill_parent"
		android:textSize="20dip" android:text="Please choose the category"
		android:layout_marginBottom="20dip" android:layout_height="wrap_content"></TextView>
	<Spinner android:id="@+id/spinner" android:layout_width="fill_parent"
		android:layout_marginBottom="20dip" android:layout_height="wrap_content"></Spinner>
	<Button android:text="Ok" android:id="@+id/btn1"
		android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>
</LinearLayout>
