<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/widget_package_info"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		androidrientation="vertical">
		<ListView android:layout_height="wrap_content"
			android:layout_weight="1" android:id="@+id/infoListView"
			android:layout_width="fill_parent"></ListView>
	</LinearLayout>
	<LinearLayout android:id="@+id/widget_policy_validation"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		androidrientation="vertical">
		<ListView android:layout_height="wrap_content"
			android:layout_weight="1" android:id="@+id/permissionListView"
			android:layout_width="fill_parent"></ListView>
	</LinearLayout>
</FrameLayout>
